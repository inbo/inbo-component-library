{
  "extends": "./tsconfig.lib.json",
  "compilerOptions": {
    "baseUrl": ".",
    "lib": ["es2018", "dom"],
    "declaration": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "rootDir": "",
    "outDir": "../../dist/ng-inbo/schematics",
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "noUnusedLocals": false,
    "target": "es6",
    "types": ["jasmine", "node"]
  },
  "include": [
    "src/**/*.ts", // All TypeScript files in the src directory
    "schematics/**/*.ts"
  ],
  "exclude": ["schematics/*/files/**/*"]
}
